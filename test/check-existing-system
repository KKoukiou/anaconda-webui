import os

import anacondalib
from installer import Installer
from review import Review
from testlib import test_main  # pylint: disable=import-error

WEBUI_TEST_DIR = os.path.dirname(__file__)
ROOT_DIR = os.path.dirname(WEBUI_TEST_DIR)
BOTS_DIR = f'{ROOT_DIR}/bots'

class TestExistingSystemFedora(anacondalib.VirtInstallMachineCase):
    disk_image = os.path.join(BOTS_DIR, "./images/fedora-rawhide")

    def testScenarioEraseAll(self):
        b = self.browser
        m = self.machine

        i = Installer(b, m)
        r = Review(b, m)

        i.open()
        i.reach(i.steps.REVIEW)

        for device in ["vda1", "vda2", "vda3", "vda4"]:
            if device == "vda4":
                # FIXME: XFAIL
                # Remove when merged:
                # https://github.com/rhinstaller/anaconda-webui/pull/328
                continue
            r.check_disk_row("vda", parent=device, action="delete")

if __name__ == '__main__':
    test_main()
